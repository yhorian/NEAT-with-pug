div(class="w-full max-w-3xl grid grid-cols-1 lg:grid-cols-3 md:grid-cols-2 gap-4 my-8 px-4 lg:mx-0")
    each post in collections.post
        a(href=post.url class="p-5 border rounded border-gray-200 hover:border-purple-400") 
            h3 #{ post.data.title }
            p #{ post.data.description } 
